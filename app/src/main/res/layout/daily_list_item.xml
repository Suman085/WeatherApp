<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
              android:layout_width="match_parent"
                android:paddingLeft="64dp"
                android:paddingRight="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
              android:layout_height="wrap_content"
                tools:background="#000000"
    >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/circle"
    android:src="@drawable/bg_temperature"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView"
        android:src="@drawable/clear_night"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/circle"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayLabel"
        android:layout_toRightOf="@id/iconImageView"
        android:layout_centerVertical="true"
        tools:text="Wednesday"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/circle"
        android:layout_alignLeft="@id/circle"
        android:layout_alignRight="@id/circle"
        android:layout_alignTop="@id/circle"
        android:id="@+id/temperatureLabel"
        android:gravity="center"
        tools:text="100"
        android:textSize="16sp"
        android:textColor="#f25019"/>
</RelativeLayout>